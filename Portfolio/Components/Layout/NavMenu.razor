<nav class="portfolio-navbar @(IsDark ? "is-dark" : "is-light")">
    <div class="portfolio-brand">
        <a href="#home" class="brand-mark">YR</a>
    </div>
    <div class="portfolio-links">
        <a href="#home">Home</a>
        <a href="#about">About</a>
        <a href="#skills">Skills</a>
        <a href="#projects">Projects</a>
        <a href="#contact">Contact</a>
        <button class="theme-switch" type="button" @onclick="OnToggleTheme" aria-pressed="@IsDark" aria-label="Toggle dark mode">
            <span class="theme-icon" aria-hidden="true">
                <svg class="icon-moon" viewBox="0 0 24 24" role="img" focusable="false">
                    <path fill="currentColor" d="M15.5 2.5a9.5 9.5 0 0 0 0 19 9.5 9.5 0 0 1-7-9.2 9.5 9.5 0 0 1 7-9.8z" />
                </svg>
            </span>
            <span class="theme-track" aria-hidden="true">
                <span class="theme-thumb"></span>
            </span>
            <span class="theme-icon" aria-hidden="true">
                <svg class="icon-sun" viewBox="0 0 24 24" role="img" focusable="false">
                    <path fill="currentColor" d="M12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0-5 1.5 3.5H10.5L12 2zm0 20-1.5-3.5h3L12 22zM2 12l3.5-1.5v3L2 12zm20 0-3.5 1.5v-3L22 12zm-3.8-6.2 3.1-1.2-1.9 2.8-1.2-1.6zM5.7 18.4l-3.1 1.2 1.9-2.8 1.2 1.6zm12.7 1.2-1.2-1.6 3.1 1.2-1.9 0.4zM5.7 5.6 2.6 4.4l1.9 2.8 1.2-1.6z" />
                </svg>
            </span>
        </button>
    </div>
</nav>

@code {
    [Parameter]
    public bool IsDark { get; set; }

    [Parameter]
    public EventCallback OnToggleTheme { get; set; }
}
